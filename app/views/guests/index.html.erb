<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Idcard</th>
      <th>Sex</th>
      <th>Job</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th>Image</th>
      <th>Statusguest</th>
      <th>User</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
  <%unless @room.nil?%>
      <%if guest.room_id ==@room.id %>
        <tr>
          <td><%= guest.fullName %></td>
          <td><%= guest.idCard %></td>
          <td><%= guest.sex %></td>
          <td><%= guest.job %></td>
          <td><%= guest.address %></td>
          <td><%= guest.phoneNumber %></td>
          <td><%= guest.image %></td>
          <td><%= guest.statusGuest %></td>
          <td><%= guest.user_id %></td>
          <td><%= guest.nameRoom %></td>
          <td><%= link_to 'Show', guest %></td>
          <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
          <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%end %>
    <%else %>
      <tr>
        <td><%= guest.fullName %></td>
        <td><%= guest.idCard %></td>
        <td><%= guest.sex %></td>
        <td><%= guest.job %></td>
        <td><%= guest.address %></td>
        <td><%= guest.phoneNumber %></td>
        <td><%= guest.image %></td>
        <td><%= guest.statusGuest %></td>
        <td><%= guest.user_id %></td>
        <td><%= guest.nameRoom %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <%end%>
    <% end %>
  </tbody>
</table>

