<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Nameroom</th>
      <th>Maxslot</th>
      <th>Statusroom</th>
      <th>Numofpeople</th>
      <th>Area Name</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.nameRoom %></td>
        <td><%= room.maxSlot %></td>
        <td><%= room.statusRoom %></td>
        <td><%= room.numOfPeople %></td>
        <td><%= room.nameArea %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "List Guests", room_guests_path(room.id) %></td>
        <td><%= link_to "List Devices", room_devices_path(room.id) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

